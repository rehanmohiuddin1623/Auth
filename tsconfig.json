{
    "version": "2.4.2",
    "compilerOptions": {
        "lib": [
            "es5",
            "es6"
        ],
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "rootDirs": [
            "./src",
            "app.ts"
        ],
        "strict": true,
        "skipLibCheck": true,
        "strictPropertyInitialization": false
    },
    "exclude": [
        "node_modules",
    ]
}